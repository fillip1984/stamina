{
  "name": "paratus-monorepo",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.11.1"
  },
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "build": "pnpm -r run build",
    "build:mobile": "pnpm --filter !paratus-web run build",
    "build:web": "pnpm --filter !paratus-mobile run build",
    "clean": "git clean -xdf",
    "auth:generate": "pnpm -F @paratus/auth generate",
    "format": "pnpm -r run format",
    "lint": "pnpm -r run lint",
    "db:generate": "pnpm --filter db run generate",
    "db:push": "pnpm --filter db run push",
    "db:studio": "pnpm --filter db run studio",
    "dev": "pnpm -r run dev",
    "dev:mobile": "pnpm --filter paratus-mobile run dev",
    "dev:web": "pnpm --filter paratus-web run dev",
    "prod:db:push": "pnpm dotenv -e .env.prod -- prisma db push",
    "prod:deploy": "pnpm dotenv -e .env.prod -- sst deploy --stage prod",
    "start:web": "pnpm --filter paratus-web run start"
  },
  "dependencies": {
    "sst": "^3.17.14"
  },
  "devDependencies": {
    "@paratus/prettier-config": "workspace:*",
    "@types/aws-lambda": "8.10.152",
    "dotenv-cli": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@paratus/prettier-config"
}

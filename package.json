{
  "name": "stamina",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.11.1"
  },
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "build": "pnpm -r run build",
    "build:mobile": "pnpm --filter !stamina-web run build",
    "build:web": "pnpm --filter !stamina-mobile run build",
    "clean": "git clean -xdf",
    "auth:generate": "pnpm -F @stamina/auth generate",
    "format": "pnpm -r run format",
    "lint": "pnpm -r run lint",
    "db:generate": "pnpm --filter db run generate",
    "db:push": "pnpm --filter db run push",
    "db:studio": "pnpm --filter db run studio",
    "dev": "pnpm -r run dev",
    "dev:mobile": "pnpm --filter stamina-mobile run dev",
    "dev:web": "pnpm --filter stamina-web run dev",
    "prod:db:push": "pnpm dotenv -e .env.prod -- drizzle-kit push",
    "prod:deploy": "pnpm dotenv -e .env.prod -- sst deploy --stage prod",
    "prod:nuke": "pnpm dotenv -e .env.prod -- sst remove --stage prod",
    "start:web": "pnpm --filter stamina-web run start",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "sst": "^3.17.25"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@stamina/eslint-config": "workspace:*",
    "@stamina/prettier-config": "workspace:*",
    "@types/aws-lambda": "8.10.159",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "prettier": "@stamina/prettier-config"
}

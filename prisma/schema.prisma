// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Area {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String
    description String
    measurables Measurable[]

    @@index([name])
}

model Measurable {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name             String
    description      String
    type             MeasurableTypeEnum
    setDate          DateTime
    dueDate          DateTime?
    suggestedDayTime DaytimeEnum?
    suggestedDay     DayOfWeekEnum?

    area   Area?   @relation(fields: [areaId], references: [id], onDelete: SetNull)
    areaId String?

    @@index([name])
}

model Result {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date         DateTime
    notes        String
    measurableId String

    @@index([date])
    @@index([measurableId])
}

enum MeasurableTypeEnum {
    Tally
    Countdown
    Seeking
}

enum DaytimeEnum {
    Morning
    Afternoon
    Evening
    Night
}

enum DayOfWeekEnum {
    Sunday
    Monday
    Tuesday
    Wednesday
    Thursday
    Friday
    Saturday
}

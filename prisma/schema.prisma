generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Measurable {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String
    description String
    type        MeasurableTypeEnum
    setDate     DateTime
    dueDate     DateTime?

    @@index([name])
}

model Result {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date         DateTime
    notes        String
    measurableId String

    @@index([date])
    @@index([measurableId])
}

enum MeasurableTypeEnum {
    Tally
    Countdown
    Seeking
}

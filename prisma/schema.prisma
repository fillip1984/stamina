// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Area {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String
    description String
    measurables Measurable[]

    @@index([name])
}

model Measurable {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name             String
    description      String
    type             MeasurableTypeEnum
    setDate          DateTime
    dueDate          DateTime?
    suggestedDayTime DaytimeEnum?
    suggestedDay     DayOfWeekEnum?
    interval         Int?
    onComplete       OnCompleteEnum?

    area   Area?   @relation(fields: [areaId], references: [id], onDelete: SetNull)
    areaId String?

    @@index([name])
}

model Result {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date         DateTime
    notes        String
    measurableId String

    weighIn              WeighIn?
    bloodPressureReading BloodPressureReading?

    @@index([date])
    @@index([measurableId])
}

model WeighIn {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date              DateTime
    weight            Float
    bodyFatPercentage Float?

    // weightProgress     Float
    // weightTotalChange  Float
    // weightToGoal       Float
    // bodyFatProgress    Float?
    // bodyFatTotalChange Float?
    // previousWeighInId  String?

    // user   User   @relation(fields: [userId], references: [id])
    // userId String

    result   Result @relation(fields: [resultId], references: [id])
    resultId String @unique
}

model WeightGoal {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    weight Float

    // user   User   @relation(fields: [userId], references: [id])
    // userId String @unique
}

model BloodPressureReading {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date      DateTime
    systolic  Int
    diastolic Int
    pulse     Int?

    category BloodPressureCategoryEnum

    // user   User   @relation(fields: [userId], references: [id])
    // userId String

    result   Result @relation(fields: [resultId], references: [id])
    resultId String @unique
}

enum MeasurableTypeEnum {
    Tally
    Countdown
    Seeking
}

enum DaytimeEnum {
    Morning
    Afternoon
    Evening
    Night
}

enum DayOfWeekEnum {
    Sunday
    Monday
    Tuesday
    Wednesday
    Thursday
    Friday
    Saturday
}

enum OnCompleteEnum {
    Note
    Weigh_in
    Blood_pressure_reading
    Runners_log
}

enum BloodPressureCategoryEnum {
    Low
    Normal
    Elevated
    Hypertension_1
    Hypertension_2
    Hypertension_crisis
}

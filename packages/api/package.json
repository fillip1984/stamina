{
  "name": "@stamina/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./src/client/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@stamina/api": "workspace:*",
    "@stamina/auth": "workspace:*",
    "@stamina/db": "workspace:*",
    "@trpc/server": "^11.8.0",
    "date-fns": "^4.1.0",
    "superjson": "^2.2.6",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@stamina/prettier-config": "workspace:*",
    "@stamina/tsconfig": "workspace:*",
    "@types/node": "^24.10.4",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "prettier": "@stamina/prettier-config"
}

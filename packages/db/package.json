{
  "name": "@stamina/db",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "type": "module",
  "license": "ISC",
  "packageManager": "pnpm@10.11.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "postinstall": "pnpm with-env prisma generate",
    "format": "prettier --write . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "pnpm with-env prisma generate",
    "push": "pnpm with-env prisma db push",
    "studio": "pnpm with-env prisma studio",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@stamina/prettier-config": "workspace:*",
    "@stamina/tsconfig": "workspace:*",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@stamina/prettier-config"
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "rhel-openssl-3.0.x"]
    // output = "../src/db/prisma-client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Area {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String
    description String
    measurables Measurable[]

    user   User   @relation(fields: [userId], references: [id])
    userId String

    @@index([name, userId])
}

model Measurable {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name             String
    description      String
    type             MeasurableTypeEnum
    setDate          DateTime
    dueDate          DateTime?
    suggestedDayTime DaytimeEnum?
    suggestedDay     DayOfWeekEnum?
    interval         Int?
    onComplete       OnCompleteEnum?

    area   Area?   @relation(fields: [areaId], references: [id], onDelete: SetNull)
    areaId String?

    user   User   @relation(fields: [userId], references: [id])
    userId String

    @@index([name, userId])
}

model Result {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date         DateTime
    notes        String
    measurableId String

    weighIn              WeighIn?
    bloodPressureReading BloodPressureReading?

    user   User   @relation(fields: [userId], references: [id])
    userId String

    @@index([date, userId])
    @@index([measurableId])
}

model WeighIn {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date              DateTime
    weight            Float
    bodyFatPercentage Float?

    previousWeighInId String?

    result   Result @relation(fields: [resultId], references: [id])
    resultId String @unique

    user   User   @relation(fields: [userId], references: [id])
    userId String
}

model WeightGoal {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    weight Float?

    user   User   @relation(fields: [userId], references: [id])
    userId String @unique
}

model BloodPressureReading {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date      DateTime
    systolic  Int
    diastolic Int
    pulse     Int?

    category BloodPressureCategoryEnum

    previousBloodPressureReadingId String?

    result   Result @relation(fields: [resultId], references: [id])
    resultId String @unique

    user   User   @relation(fields: [userId], references: [id])
    userId String
}

enum MeasurableTypeEnum {
    Tally
    Countdown
    Seeking
}

enum DaytimeEnum {
    Morning
    Afternoon
    Evening
    Night
}

enum DayOfWeekEnum {
    Sunday
    Monday
    Tuesday
    Wednesday
    Thursday
    Friday
    Saturday
}

enum OnCompleteEnum {
    Note
    Weigh_in
    Blood_pressure_reading
    Runners_log
}

enum BloodPressureCategoryEnum {
    Low
    Normal
    Elevated
    Hypertension_1
    Hypertension_2
    Hypertension_crisis
}

// Necessary for Beter auth
model User {
    id            String    @id
    name          String
    email         String
    emailVerified Boolean   @default(false)
    image         String?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @default(now()) @updatedAt
    sessions      Session[]
    accounts      Account[]

    areas       Area[]
    measurables Measurable[]
    results     Result[]

    weightGoal WeightGoal?

    weighIns              WeighIn[]
    bloodPressureReadings BloodPressureReading[]
}

model Session {
    id        String   @id
    expiresAt DateTime
    token     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    ipAddress String?
    userAgent String?
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([token])
}

model Account {
    id                    String    @id
    accountId             String
    providerId            String
    userId                String
    user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    accessToken           String?
    refreshToken          String?
    idToken               String?
    accessTokenExpiresAt  DateTime?
    refreshTokenExpiresAt DateTime?
    scope                 String?
    password              String?
    createdAt             DateTime  @default(now())
    updatedAt             DateTime  @updatedAt
}

model Verification {
    id         String   @id
    identifier String
    value      String
    expiresAt  DateTime
    createdAt  DateTime @default(now())
    updatedAt  DateTime @default(now()) @updatedAt
}
